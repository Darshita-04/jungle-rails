<div class="mx-auto mb-5" style="max-width:400px;">
  <header class="page-header">
    <h1>Log In</h1>
  </header>
  <%= form_with url: login_path, local: true do |form| %>
    <p>
      <%= form.label :email %><br>
      <%= form.email_field :email, name: "session[email]", class: "form-control" %>
    </p>
    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password, name: "session[password]", class: "form-control" %>
    </p>
    <p>
      <%= form.submit "Log In", class: "btn btn-primary" %>
    </p>
  <% end %>
</div>  
