<section class="admin-categories">
  <header class="page-header">
    <h1>Categories</h1>
  </header>

  <div class="container">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary" %>
  <%= link_to "Back to Dashboard", admin_root_path, class: "btn btn-secondary" %>

</section>

