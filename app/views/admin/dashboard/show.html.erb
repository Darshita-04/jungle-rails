<section class="admin-dashboard">
  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <div class="card border-primary">
          <div class="card-header bg-primary text-white">Products</div>
          <div class="card-body">
            <h3 class="card-title"><%= @product_count %></h3>
            <p class="card-text">Total products in the store</p>
            <%= link_to "View Products", admin_products_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card border-success">
          <div class="card-header bg-success text-white">Categories</div>
          <div class="card-body">
            <h3 class="card-title"><%= @category_count %></h3>
            <p class="card-text">Total categories available</p>
            <%= link_to "View Categories", admin_categories_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
